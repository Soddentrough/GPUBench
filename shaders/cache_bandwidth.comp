#version 460

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(set = 0, binding = 0) buffer Data {
    uint data[];
} Buffer;

void main() {
    uint sum = 0;
    for (int i = 0; i < 1024; ++i) {
        for (int j = 0; j < 16; ++j) {
            sum += Buffer.data[j];
        }
    }
    Buffer.data[0] = sum;
}
